<network-security-config xmlns:tools="http://schemas.android.com/tools">
    <base-config>
        <trust-anchors>
            <!-- Trust user added CAs -->
            <certificates
                src="user"
                tools:ignore="AcceptsUserCertificates" />
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>